#!/usr/bin/env bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &> /dev/null && pwd)"
PARENT_DIR="$(dirname "$SCRIPT_DIR")"

# Source utils and consts from parent directory
source "$PARENT_DIR/utils"
source "$PARENT_DIR/consts"

# Force push with lease (safer than force push) and skip hooks
echo "Performing YOLO push (force-with-lease, no-verify)..."
git push --force-with-lease --no-verify

echo "${GREEN}âœ“${NORMAL} YOLO push completed successfully!"
