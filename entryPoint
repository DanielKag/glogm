#!/usr/bin/env bash

VERSION="1.2"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# Handle version flag
if [ "$1" == "--version" ]; then
    echo "glogm version $VERSION"
    echo "https://github.com/DanielKag/glogm"
    exit 0
fi

# Just run the log command directly
"$SCRIPT_DIR/src/main" "$@"
exit $?
